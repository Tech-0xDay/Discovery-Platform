# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/oxship

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Redis (Use rediss:// for Upstash TLS connection)
# Local: redis://localhost:6379/0
# Upstash: rediss://default:YOUR_PASSWORD@YOUR_ENDPOINT.upstash.io:6379
REDIS_URL=redis://localhost:6379/0

# Blockchain (Kaia Testnet)
KAIA_TESTNET_RPC=https://public-en-kairos.node.kaia.io
OXCERTS_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Pinata IPFS Configuration
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_api_key
PINATA_JWT=your_pinata_jwt_token

# AWS S3 (Optional - DEPRECATED, using IPFS instead)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Rate Limiting
RATELIMIT_ENABLED=true
# Use same Redis URL as above, just different database number
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Email (Optional)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@0xship.com

# Server
PORT=5000
HOST=0.0.0.0
